          </div>
          <div class="row form-wrapper">
            <div class="col-md-6">
                <input type="text" placeholder="First Name*" id="firstName" required />
                <input type="email" placeholder="Email Address*" id="email" required />
                <div class="small-inputs">
                  <div class="col-md-6">
                    <input type="text" placeholder="City*" required id="city" 
                    class="small-inputs_area" />
                  </div>
                  <div class="col-md-6">
                    <input type="text" placeholder="Zip Code*" required id="zipCode" 
                    class="small-inputs_area small-inputs_area-pull-left" />
                  </div>
                </div>
                <label for="staffNeeded">Staff Needed*</Select></label>
                <select class="form-control correction" id="staffNeeded" required>
                  <option disabled selected>Nothing Selected</option>
                  <option value="Data Entry Specialist">Data Entry Specialist</option>
                  <option value="Bookkeeper">Bookkeeper</option>
                  <option value="Staff Accountant">Staff Accountant</option>
                  <option value="Tax Associate">Tax Associate</option>
                  <option value="Audit Associate">Audit Associate</option>
                  <option value="ax Senior">Tax Senior</option>
                  <option value="Accounts Senior">Accounts Senior</option>
                  <option value="Manager">Manager</option>
                </select>
                <select id="businessSize" class="form-control additional-top-margin correction" required>
                  <option disabled selected>Size of Your Business</option>
                  <option value="1-5">1-5</option>
                  <option value="6-10">6-10</option>
                  <option value="11-20">11-20</option>
                  <option value="21+">21+</option>
                </select>
            </div>
            <div class="col-md-6">
              <input type="text" placeholder="Last Name*" id="lastName" required />
              <input type="text" placeholder="Phone Number*" id="phone" required />
              <input type="text" required placeholder="State*" id="state"/>
              <select id="contactMethod" class="form-control make-up-margin-for-label" required>
                <option disabled selected>Prefered Contact Method</option>
                <option value="phone">Phone Call</option>
                <option value="email">Email</option>
                <option value="text">Text Message</option>
              </select>
              <select id="timeline" class="form-control additional-top-margin" required>
                <option disabled selected>How soon are you planning to hire</option>
                <option value="Less than 1 month">Less than 1 month</option>
                <option value="1 to 3 months">1 to 3 months</option>
                <option value="More than 3 months">More than 3 months</option>
              </select>
            </div>
          </div>
