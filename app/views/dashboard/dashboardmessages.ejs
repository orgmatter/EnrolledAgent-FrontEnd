<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta charset="UTF-8"><meta name="google" content="notranslate">
  <meta http-equiv="Content-Language" content="en">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="pages"
      content="<%= (locals.agentMessage && locals.agentMessage.pages)? locals.agentMessage.pages : '' %> " />
  <meta name="data"
    content="<%= (locals.agentMessage && locals.agentMessage.pages)? locals.agentMessage.data : ''%> " />
  <meta name="page"
    content="<%= (locals.agentMessage && locals.agentMessage.pages)? locals.agentMessage.page : '' %> " />
    <title>Messages</title>
    <link
      href="/assets/files/favicon.webp"
      rel="shortcut icon"
      type="image/png"
    />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/reset.css" />
    <!-- CSS | Main style file -->
    <link href="/css/style-main.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    
  </head>
  <body>
    <div class="layout">
      <%-include("../partials/sidebar.ejs")%>
      <%-include("../partials/navbar.ejs")%>
      <div class="mainsection">
        <section class="body">
        <div class="message-top">
          <h3>Messages</h3>
          <p>View messages sent to you by potential clients.</p>
        </div>
        <% if(locals.agentMessage && locals.agentMessage.data.length > 0) {%>
        
          <% locals.agentMessage.data.map((el,id) => { %>
            <div class="message-cards" key=<%= id %> >
              <div class="head-flex">
                <div class="date"><%- locals.dayjs(el.createdAt).format("DD <br /> MMM") %></div>
                <div class="title">
                  <h4><%= el.subject || "" %> </h4>
                  <small>by <%= el.name || "" %> | <%= el.email || "" %> | <%= el.phone || "" %></small>
                </div>
              </div>

              <div class="content">
                <p><%= el.message || "" %> </p>
              </div>

              <!-- <a href="#" class="message-link"> Read More</a> -->
            </div>

            <hr />
         <% }) %> 
         <section id="bottom">
            <div class="container contain">
              <div class="row">
                <% if(locals.agentMessage && locals.agentMessage.data && locals.agentMessage.data.length > 0){ %> 
                <div class="col-md-3">
                    <% const { page, pages, perPage, total} = locals.agentMessage %>
                      <p> Showing
                        <span id="resNumber"> <%= (((page || 0) -1) * (perPage || 0))+ 1 || 0%> to 
                          <%= Math.min((page || 1) * (perPage || 0), total) || 0%> of <%= total || 0%> entries
                        </span>
                      </p>  
                </div>
                <% } %> 
                <% if(locals.agentMessage && locals.agentMessage.data && locals.agentMessage.pages > 1){ %> 
                <div class="col-md-9">
                  <nav class="MyPagination">
                    <ul class="pagination">
                      <ul id="pagination" class="pagination-sm"></ul>
                    </ul>
                  </nav>
                </div>
                <% } %> 
                <!-- <div class="col-md-6 b-tons"> -->
              </div>
            </div>
          </section>
        <%} else {%>
          <p style="text-align: center;">You do not have any messages yet.</p>
        <%}%> 
        
      </div>
    </section>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
    
 <script src="/javascripts/plugin/jquery.simplePagination.js"></script>
    <script src="/javascripts/pagination.js"></script>
  </body>
</html>
